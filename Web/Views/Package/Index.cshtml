@{Html.RenderAction("Filter", "Base", new
    {
        categories = new List<string> {
        "项目类型"
    }

});}
<div id="searchResult" class="am-u-md-10 am-u-md-offset-1">
        @foreach (Web.Models.Package package in ViewBag.Packages)
        {
            <div class="am-g job-item">
                <div class="am-u-md-6">
                    <div>
                        <span class="job-item-title">@package.Name</span>
                        <span class="">@package.Type</span>
                    </div>
                    <div>
                        <span class="job-item-salary">@package.Budget</span>
                        <span class="job-item-default">@package.Period</span>
                    </div>
                    <div class="">
                        <span>技能要求：</span>
                        <span>@package.Skill</span>
                    </div>
                </div>
                <div class="am-u-md-5">
                    <div>
                        <a href="#" class="job-item-title">@package.Phone</a>
                    </div>
                    <div>@package.Email</div>
                    <div>

                    </div>
                </div>
                <div class="am-u-md-1">
                    <a href="@string.Format("/job/detail/{0}", package.ID)">详细 &raquo;</a>
                </div>
            </div>
        }
    @{Html.RenderAction("Pagination", "Base");}
</div>
