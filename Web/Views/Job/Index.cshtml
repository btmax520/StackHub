
@{Html.RenderAction("Filter", "Base", new
    {
        categories = new List<string> {
    "薪水范围","工作地点","企业性质","工作经验","学历","工作性质","企业规模"
}

    });}
<div class="am-g">
    <div id="searchResult" class="am-u-md-10 am-u-sm-centered">
        <div class="job-list">
            @foreach (Web.Models.Job job in ViewBag.Jobs)
        {
            <div class="list-item">
                <div class="am-u-md-3 job-position"><a href="@string.Format("/job/detail/{0}", job.ID)">@job.Position</a></div>
                <div class="am-u-md-3 job-company">@job.CompanyName</div>
                <div class="am-u-md-3 job-area">@job.Area</div>
                <div class="am-u-md-2 job-salary">@job.Salary</div>
                <div class="am-u-md-1 job-timestamp">@job.ModifyOn.ToString("MM-dd")</div>
            </div>
        }
        </div>
        @{Html.RenderAction("Pagination", "Base");}
    </div>
</div>
