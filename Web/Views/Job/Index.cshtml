
@{Html.RenderAction("Filter","Base",new {
    categories = new List<string> {
        "薪水范围","工作地点","企业性质","工作经验","学历","工作性质","企业规模"
    }

});}
<div id="searchResult" class="am-u-md-10 am-u-md-offset-1">
        @foreach (Web.Models.Job job in ViewBag.Jobs)
        {
            <div class="am-g job-item">
                <div class="am-u-md-6">
                    <div>
                        <span class="job-item-title">@job.Position</span>
                        <span class="">@job.Area</span>
                        <span class="job-item-timestamp">@job.ModifyOn</span>
                    </div>
                    <div>
                        <span class="job-item-salary">@job.Salary</span>
                        <span class="job-item-default">@job.Kind  /  @job.Education</span>
                    </div>
                    <div class="">
                        <span>技能要求：</span>
                        <span>@job.Skill</span>
                    </div>
                </div>
                <div class="am-u-md-5">
                    <div>
                        <a href="#" class="job-item-title">@job.CompanyName</a>
                    </div>
                    <div>@job.CompanyType / @job.CompanySize</div>
                    <div>
                        
                    </div>
                </div>
                <div class="am-u-md-1">
                    <a href="@string.Format("/job/detail/{0}", job.ID)">详细 &raquo;</a>
                </div>
            </div>
        }
    @{Html.RenderAction("Pagination", "Base");}
</div>
